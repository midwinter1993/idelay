#!/bin/sh

AGENT="$IDELAY_DIR/target/idelay-1.0-SNAPSHOT.jar"
JVMTI_AGENT="$IDELAY_DIR/jvmti/x.so"
# JVMTI_AGENT="/$PWD/jvmti/x.so=dump_thread:true,num_spot_threads:3"

echo "java -Dlog4j.configurationFile=log4j2.xml \\
         -javaagent:$AGENT \\
         -agentpath:$JVMTI_AGENT"

java -Dlog4j.configurationFile=log4j2.xml -javaagent:$AGENT \
     -agentpath:$JVMTI_AGENT \
     $*
